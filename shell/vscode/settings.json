{
  "files.associations": {
    "*.tpl": "php"
  },
  "vetur.validation.template": false,
  "eslint.validate": [
    {
      "language": "vue",
      "autoFix": true
    },
    {
      "language": "html",
      "autoFix": true
    },
    {
      "language": "javascript",
      "autoFix": true
    },
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],
  "eslint.autoFixOnSave": true,
  "editor.formatOnSave": false,
  "breadcrumbs.enabled": true,
  "editor.fontFamily": "'Hack', 'monospace', monospace, 'Droid Sans Mono'",
  "workbench.editor.highlightModifiedTabs": true,
  "//": "plugin ---> esbenp.prettier-vscode",
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascript]": {
      "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "editor.codeActionsOnSave": {
    "//": "是否儲存時自動 formatter",
    "source.fixAll.eslint": false
  },
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "// editor.wordWrap": "自動換行 on, 不要換行 off",
  "editor.wordWrap": "off",
  "// editor.useTabStops": "貼上內容後, 原本是 tab 的內容轉換成 space",
  "//// editor.useTabStops": true,
  "editor.insertSpaces": true,
  "window.zoomLevel": 1
}


