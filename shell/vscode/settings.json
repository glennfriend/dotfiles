{
  "files.associations": {
    "*.tpl": "php",
    "*.js": "javascript"
  },
  "// files.trimFinalNewlines": "若啟用，則會在儲存檔案時，修剪檔案末新行尾的所有新行",
  "files.trimFinalNewlines": true,
  "vetur.validation.template": false,
  "eslint.validate": [
    {
      "language": "vue",
      "autoFix": true
    },
    {
      "language": "html",
      "autoFix": true
    },
    {
      "language": "javascript",
      "autoFix": true
    },
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],
  "eslint.autoFixOnSave": true,
  "editor.formatOnSave": false,
  "breadcrumbs.enabled": true,
  "editor.fontFamily": "'Hack', 'monospace', 'Droid Sans Mono', 'Inconsolata'",
  "editor.fontSize": 14,
  "gitlens.codeLens.enabled": false,
  "gitlens.currentLine.enabled": false,
  "editor.minimap.enabled": false,
  "workbench.editor.highlightModifiedTabs": true,
  "[json]": {
    "editor.defaultFormatter": "vscode.json-language-features",
    "editor.tabSize": 2,
    "editor.insertSpaces": true,
    "editor.detectIndentation": false
  },
  "[typescript]": {
    "//": "plugin ---> esbenp.prettier-vscode",
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "vscode.typescript-language-features"
  },
  "[javascript]": {
    "editor.defaultFormatter": "vscode.typescript-language-features"
  },
  "[javascriptreact]": {},
  "[css]": {
      "editor.defaultFormatter": "vscode.css-language-features"
  },
  "[scss]": {
      "editor.defaultFormatter": "sasa.vscode-sass-format"
  },
  "[sql]": {
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    "editor.detectIndentation": false
  },
  "[php]": {
    "editor.defaultFormatter": "bmewburn.vscode-intelephense-client"
  },
  "// editor.stickyScroll.enabled": "function name 浮動停留在第一行",
  "editor.stickyScroll.enabled": false,
  "editor.codeActionsOnSave": {
    "//": "是否儲存時自動 formatter",
    "source.fixAll.eslint": "never"
  },
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    "editor.detectIndentation": false
  },
  "// editor.wordWrap": "自動換行 on, 不要換行 off",
  "editor.wordWrap": "on",
  "// editor.useTabStops": "貼上內容後, 原本是 tab 的內容轉換成 space",
  "//// editor.useTabStops": true,
  "editor.insertSpaces": true,
  "hediet.vscode-drawio.local-storage": "",
  "workbench.editor.untitled.hint": "hidden",
  "plantuml.render": "PlantUMLServer",
  "cSpell.userWords": [
    "Laravel",
    "loggly",
    "phpdoc",
    "Skynet",
    "TCPA"
  ],
  "php.suggest.basic": false,
  "php.validate.enable": false,
  "emmet.excludeLanguages": [
    "markdown",
    "php"
  ],
  "liveSassCompile.settings.formats": [
    {
      "extensionName": ".css",
      "format": "compressed"
    }
  ],
  "liveSassCompile.settings.generateMap": false,
  "window.zoomLevel": 2,
  "editor.pasteAs.preferences": [],
  "plantuml.server": "http://127.0.0.1:8888/"
}
